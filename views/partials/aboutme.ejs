<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="content/aboutme.css">
    <title>Yes/No Question</title>
    
</head>
<body>
    <audio controls autoplay loop style="height: 0px; background-color: transparent;">
        <source src="/assets/images/music.mp4" type="audio/mp4">
        Your browser does not support the audio element.
    </audio>
    <div style="text-align: center;">
        <h1>Will you be my valentine?</h1>

        <div class="btn-container">
            <input type="radio" id="yes" name="answer" value="yes" class="btn" onclick="displayImage()">
            <label for="yes" class="btn"><b>yes‚ù§Ô∏è</b></label>
        </div>
        
        <div class="btn-container">
            <input type="radio" id="no" name="answer" value="no" class="btn" onclick="displayImage()">
            <label for="no" class="btn"><b>noüòî</b></label>
        </div>

        <div id="imageContainer">
            <img id="resultImage" src="">
        </div>

        <script>
            function displayImage() {
                var answer = document.querySelector('input[name="answer"]:checked').value;
                var img = document.getElementById('resultImage');
                var imgContainer = document.getElementById('imageContainer');
                var noButton = document.getElementById('no');
                var noLabel = noButton.nextElementSibling;

                if (answer === "yes") {
                    img.src = "/assets/images/bear.gif"; // Set the path to your 'yes' image
                    imgContainer.classList.add('show'); // Show the image container with fade-in effect
                    // Reset the position of the "No" button label
                    noLabel.style.position = "static";
                } else {
                    img.src = "/assets/images/jn custom.png"; // Set the path to your 'no' image
                    imgContainer.classList.add('show'); // Show the image container with fade-in effect
                }
            }

            // Function to move the "No" button to random position on hover
            function moveNoButton() {
                var noButton = document.getElementById('no');
                noButton.disabled = true; // Disable the button to prevent clicking while moving
                var label = noButton.nextElementSibling;
                label.style.position = "absolute";
                label.style.left = Math.random() * (window.innerWidth - label.offsetWidth) + "px";
                label.style.top = Math.random() * (window.innerHeight - label.offsetHeight) + "px";
                setTimeout(function() {
                    noButton.disabled = false; // Re-enable the button after moving
                }, 1000); // Change the delay as needed
            }
            
            // Attach moveNoButton function to mouseover event of the "No" button label
            document.getElementById('no').nextElementSibling.addEventListener('mouseover', moveNoButton);
        </script>
    </div>
</body>
</html>
